<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Rocktechnolabs\CLP\Block\Adminhtml\Flavor\Edit" name="clp_clp_edit"/>
        </referenceContainer>
		
        <referenceContainer name="left">
            <block class="Rocktechnolabs\CLP\Block\Adminhtml\Flavor\Edit\Tabs" name="clp_flavor_edit_tabs">

                <block class="Rocktechnolabs\CLP\Block\Adminhtml\Flavor\Edit\Tabs\Main" name="clp_flavor_edit_tabs_main"></block>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">clp_flavor_edit_tabs_main</argument>
                </action>

                <!-- Featured Product Start -->				
				<action method="addTab">
                    <argument name="name" xsi:type="string">flavor_products</argument>
                    <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Flavor Products</item>
                        <item name="title" xsi:type="string">Flavor Products</item>
                        <item name="url" xsi:type="helper" helper="Rocktechnolabs\CLP\Helper\Data::getFlavorProductsGridUrl"></item>
                        <item name="class" xsi:type="string">ajax</item>
                    </argument>
                </action> 
                <!-- Featured Product End -->

            </block>
		</referenceContainer>
    </body>
</page>