                <div class="post-text-hld">
                    <?php echo $block->getContent(); ?>
                    <div class="clear"></div>					
                </div>
            </div>
			<?php $IngredientsContent=$block->getPost()->getIngredientsContent();?>
			<?php if($IngredientsContent):?>
			<div class="post-ingredients-content">
			<h3>Ingredients</h3>
			<?php echo $IngredientsContent; ?>
			</div>
			<?php endif;?>
			<?php $DirectionsContent=$block->getPost()->getDirectionsContent();?>
			<?php if($DirectionsContent):?>
			<div class="post-directions-content">
			<h3>Directions</h3>
			<?php echo $DirectionsContent; ?>
			</div>
			<?php endif;?>
        </div>
        <div class="post-bottom">
            <?php echo $this->getChildHtml('blog.post.bottom');?>
