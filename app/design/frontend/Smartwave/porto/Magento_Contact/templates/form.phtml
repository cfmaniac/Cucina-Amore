 jQuery('body').on('keydown','#zipcode',function(e){ 
   if (jQuery.inArray(e.keyCode, [46, 8, 9, 189, 27, 13, 110, 190,8,9]) !== -1 || (e.keyCode === 67 && (e.ctrlKey === true || e.metaKey === true)) ||(e.keyCode === 86 && (e.ctrlKey === true || e.metaKey === true)) || (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) || 
